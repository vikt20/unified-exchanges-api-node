{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": [
    "binance/**/*",
    "core/**/*",
    "bybit/**/*",
    "test.ts",
    "testing/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}